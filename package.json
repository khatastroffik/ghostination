{
  "name": "ghostination",
  "description": "A slim 'Khatastroffik' Ghost Theme for personal blogs",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v3"
  },
  "license": "MIT",
  "screenshots": {
    "wide": "docs/ghostination-screenshot-01.png",
    "midsize": "docs/ghostination-screenshot-02.png",
    "narrow": "docs/ghostination-screenshot-03.png" 
  },
  "author": {
    "name": "Loïs Bégué",
    "url": "https://github.com/khatastroffik/"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme",
    "responsive-design"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/khatastroffik/ghostination.git"
  },
  "homepage": "https://github.com/khatastroffik/ghostination",
  "bugs": {
    "url": "https://github.com/khatastroffik/ghostination/issues"
  },
  "dependencies": {
    "ghosthunter": "github:jamalneufeld/ghostHunter"
  },
  "devDependencies": {
    "@khatastroffik/grunt-git-push": "^1.0.0",
    "@khatastroffik/grunt-standard-version": "^1.1.0",
    "autoprefixer": "^9.1.5",
    "grunt": "^1.3.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^1.6.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-conventional-github-releaser": "^1.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-sass": "^3.1.0",
    "load-grunt-tasks": "^5.1.0",
    "node-sass": "^4.14.0"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1920
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "grunt build",
    "compress": "grunt compress",
    "release": "grunt release",
    "firstrelease": "grunt firstRelease"
  }
}
